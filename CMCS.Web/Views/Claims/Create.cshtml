@model CMCS.Web.Models.Claim
@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit Claim</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post" id="claimForm">
    <div class="mb-3">
        <label asp-for="LecturerName" class="form-label"></label>
        <input asp-for="LecturerName" class="form-control" />
        <span asp-validation-for="LecturerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoursWorked" class="form-label"></label>
        <input asp-for="HoursWorked" class="form-control" id="hours" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HourlyRate" class="form-label"></label>
        <input asp-for="HourlyRate" class="form-control" id="rate" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Total Payment</label>
        <input id="total" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Supporting document (PDF/image)</label>
        <input type="file" name="document" accept=".pdf,.jpg,.png" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function updateTotal() {
            const hours = parseFloat($('#hours').val()) || 0;
            const rate = parseFloat($('#rate').val()) || 0;
            const total = (hours * rate).toFixed(2);
            $('#total').val(total);
        }

        $('#hours, #rate').on('input', updateTotal);

        // ensure total is computed before submit (server authoritative)
        $('#claimForm').on('submit', function () {
            updateTotal();
        });
    </script>
}


